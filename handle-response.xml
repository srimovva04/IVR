<?xml version="1.0" encoding="UTF-8"?>
<Response>
    <Say>
        <If condition="'{{Digits}}' == '1'">Thank you for your RSVP.</If>
        <If condition="'{{Digits}}' == '2'">Thank you for your response.</If>
        <If condition="'{{Digits}}' != '1' && '{{Digits}}' != '2'">You did not press a valid key. Goodbye!</If>
    </Say>
</Response>w
